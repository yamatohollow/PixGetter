<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:padding="@dimen/layout_spacing">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_image_height"
        android:maxWidth="@dimen/item_image_width"
        android:scaleType="centerCrop"
        android:contentDescription="@string/item_image_desc"
        android:background="@color/gray_95"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/item_downloads_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_image"
        android:text="@string/title_downloads"
        android:layout_toStartOf="@id/item_downloads" />
    <TextView
        android:id="@+id/item_downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_image"
        android:layout_alignEnd="@id/item_image" />

</RelativeLayout>